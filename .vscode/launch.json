    "version": "0.2.0",
    "configurations": [
        {
            "type": "bashdb",
            "request": "launch",
            "showDebugOutput": false,
            "name": "Bash-Debug (hardcoded script name)",
            "cwd": "${workspaceFolder}/c-lang",
            "program": "${workspaceFolder}/c-lang/Default.${fileBasenameNoExtension}_main.compile",
            "args": []
        },


        {
            "type": "java",
            "name": "Debug (Launch) with Arguments Prompt",
            "request": "launch",
            "mainClass": "",
            "args": "${command:SpecifyProgramArgs}"
        },
        {
            "type": "java",
            "name": "CodeLens (Launch) - BasicWalk",
            "request": "launch",
            "mainClass": "ec.lang.BasicWalk",
            "projectName": "ec",
            "args": "${file} c-lang",
        },
        {
            "type": "java",
            "name": "Debug (Launch) - Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
    ]
}